<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/user_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="修改密码"
        android:textColor="#33bbff"
        android:textSize="19sp" />

    <View
        android:id="@+id/user_edit_line"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" />

    <EditText
        android:id="@+id/user_edit_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/selector_edittext_account"
        android:hint="请输入原密码"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/user_edit_edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/selector_edittext_account"
        android:hint="请输入新密码"
        android:inputType="textPassword" >
    </EditText>

    <Button
        android:id="@+id/user_edit_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/selector_button"
        android:text="确认"
        android:textColor="#FFFFFF" />

</LinearLayout>