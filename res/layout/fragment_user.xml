<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/avater"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#ffffff"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/avater_img"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/user_icon_default" />

            <TextView
                android:id="@+id/avater_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avater_img"
                android:layout_centerHorizontal="true"
                android:text="未登录,点击登录"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/list_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#B3B3B3" />

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/user_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/user_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/user_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/update_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/change_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/bind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/user_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xun.qianfanzhiche.view.ItemBar>

        <com.xun.qianfanzhiche.view.ItemBar
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="16dp" >
        </com.xun.qianfanzhiche.view.ItemBar>
    </LinearLayout>

</ScrollView>